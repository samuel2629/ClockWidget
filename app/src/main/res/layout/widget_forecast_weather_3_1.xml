<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/ForecastLayoutTheme">

            <ImageView
                android:id="@+id/appwidgetDateTv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/appWidgetIconIv"
                android:src="@drawable/meteo_2"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appWidgetWeatherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView style="@style/ForecastSeparatorTheme"/>

        <LinearLayout style="@style/ForecastLayoutTheme">

            <ImageView
                android:id="@+id/appwidgetDateTv1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/appWidgetIconIv1"

                android:src="@drawable/meteo_2"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appWidgetWeatherText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView style="@style/ForecastSeparatorTheme"/>

        <LinearLayout style="@style/ForecastLayoutTheme">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appwidgetDateTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/appWidgetIconIv2"
                android:layout_width="wrap_content"
                android:src="@drawable/meteo_2"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appWidgetWeatherText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView style="@style/ForecastSeparatorTheme"/>

        <LinearLayout style="@style/ForecastLayoutTheme">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appwidgetDateTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/appWidgetIconIv3"
                android:layout_width="wrap_content"
                android:src="@drawable/meteo_2"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appWidgetWeatherText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView style="@style/ForecastSeparatorTheme"/>

        <LinearLayout style="@style/ForecastLayoutTheme">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/appwidgetDateTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/appWidgetIconIv4"
                android:src="@drawable/meteo_2"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/appWidgetWeatherText4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/buttonToCurrent"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_1"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>